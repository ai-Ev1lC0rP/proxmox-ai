# News API Keys
NEWS_API_KEY=your_news_api_key_here
GUARDIAN_API_KEY=your_guardian_api_key_here
NYT_API_KEY=your_nyt_api_key_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.2:latest

# Other Configuration
DEFAULT_NEWS_TOPIC=artificial intelligence
MAX_NEWS_RESULTS=5

# Proxmox API Configuration
PROXMOX_HOST=proxmox.example.com
PROXMOX_PORT=8006
# Token format should be: 'user@realm!tokenname', e.g., 'root@pam!mytoken'
PROXMOX_TOKEN_ID=root@pam!tokenname
PROXMOX_SECRET=your-token-secret-here
# Set to 'true' if using a valid SSL certificate, 'false' if using self-signed
PROXMOX_VERIFY_SSL=false

# LLM Configuration for Proxmox AI
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_MAX_TOKENS=2048
